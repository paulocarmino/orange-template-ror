{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./app/*"
      ],
      "@src/*": [
        "./app/frontend/src/*"
      ],
      "@ui/*": [
        "./app/frontend/src/components/ui/*"
      ],
      "@components/*": [
        "./app/frontend/src/components/*"
      ],
    }
  },
  "include": [
    "vite.config.ts"
  ]
}